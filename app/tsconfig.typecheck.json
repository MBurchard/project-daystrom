{
  "extends": ["../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["modules/app/src/*"],
      "@generated/*": ["modules/app/src/generated/*"],
      "@resources/*": ["resources/*"]
    },
    "types": ["vite/client", "vitest"]
  },
  "include": [
    "modules/app/src/**/*.ts",
    "modules/app/src/**/*.vue",
    "vitest.config.ts",
    "vite.config.ts"
  ]
}
