{
  "name": "daystrom-app",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "typecheck:frontend": "vue-tsc --build --force",
    "typecheck:backend": "node ../scripts/build.ts typecheck:backend",
    "test:frontend": "vitest run",
    "test:frontend:watch": "vitest",
    "test:frontend:coverage": "vitest run --coverage",
    "test:backend": "node ../scripts/build.ts test:backend",
    "test:backend:coverage": "node ../scripts/build.ts test:backend:coverage",
    "dev": "node ../scripts/build.ts dev",
    "dev:frontend": "vite",
    "icons": "node ../scripts/build.ts icons",
    "build:frontend": "node ../scripts/build.ts icons && vue-tsc --build && vite build",
    "preview:frontend": "vite preview"
  },
  "dependencies": {
    "@mburchard/bit-log": "^1.0.0",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-log": "^2.8.0",
    "pinia": "^3.0.4",
    "vue": "^3.5.28"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^24.10.13",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/tsconfig": "^0.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  }
}
